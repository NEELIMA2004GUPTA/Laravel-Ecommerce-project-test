<?php

namespace Tests\Feature\Admin;

use Tests\TestCase;
use App\Models\User;
use App\Models\Category;
use App\Models\Product;
use Illuminate\Http\UploadedFile;
use Illuminate\Support\Facades\Storage;
use Illuminate\Foundation\Testing\RefreshDatabase;
use PHPUnit\Framework\Attributes\Test;

class ProductControllerTest extends TestCase
{
    use RefreshDatabase;

    protected $admin;

    protected function setUp(): void
    {
        parent::setUp();
        $this->admin = User::factory()->create(['is_admin' => true]);
        Storage::fake('public');
    }

    #[Test]
    public function admin_can_view_products_index()
    {
        $this->actingAs($this->admin)
             ->get(route('admin.products.index'))
             ->assertStatus(200);
    }

    #[Test]
    public function admin_can_view_create_product_page()
    {
        $this->actingAs($this->admin)
             ->get(route('admin.products.create'))
             ->assertStatus(200);
    }

    #[Test]
    public function admin_can_store_product_with_images_and_variants()
    {
        $category = Category::factory()->create();
        $images = [
            UploadedFile::fake()->image('image1.jpg'),
            UploadedFile::fake()->image('image2.png'),
        ];

        $response = $this->actingAs($this->admin)
            ->post(route('admin.products.store'), [
                'title' => 'Test Product',
                'description' => 'Test description',
                'category_id' => $category->id,
                'price' => 100,
                'discount' => 10,
                'sku' => 'SKU123',
                'stock' => 5,
                'variants' => ['Size' => 'M', 'Color' => 'Red'],
                'images' => $images,
            ]);

        $response->assertRedirect(route('admin.products.index'));
        $this->assertDatabaseHas('products', ['title' => 'Test Product']);

        $product = Product::first();
        $this->assertCount(2, json_decode($product->images, true));
        $this->assertEquals(json_encode(['Size' => 'M', 'Color' => 'Red']), $product->variants);
    }

    #[Test]
    public function admin_can_view_edit_page()
    {
        $product = Product::factory()->create();

        $this->actingAs($this->admin)
             ->get(route('admin.products.edit', $product->id))
             ->assertStatus(200);
    }

    #[Test]
    public function admin_can_update_product_and_add_remove_images()
    {
        $category = Category::factory()->create();
        $product = Product::factory()->create([
            'images' => json_encode(['old_image.jpg']),
        ]);

        Storage::disk('public')->put('old_image.jpg', 'dummy');

        $newImage = UploadedFile::fake()->image('new_image.jpg');

        $response = $this->actingAs($this->admin)
            ->put(route('admin.products.update', $product->id), [
                'title' => 'Updated Title',
                'description' => 'Updated Description',
                'category_id' => $category->id,
                'price' => 200,
                'discount' => 20,
                'sku' => $product->sku,
                'stock' => 10,
                'remove_images' => ['old_image.jpg'],
                'images' => [$newImage],
            ]);

        $response->assertRedirect(route('admin.products.index'));

        $product->refresh();
        $this->assertEquals('Updated Title', $product->title);
        $this->assertCount(1, $product->images);
        Storage::disk('public')->assertMissing('old_image.jpg');
        Storage::disk('public')->assertExists($product->images[0]);
    }

    #[Test]
    public function admin_can_delete_product_and_its_images()
    {
        $product = Product::factory()->create([
            'images' => json_encode(['img1.jpg', 'img2.jpg']),
        ]);

        foreach (json_decode($product->images) as $img) {
            Storage::disk('public')->put($img, 'dummy');
        }

        $response = $this->actingAs($this->admin)
            ->delete(route('admin.products.destroy', $product->id));

        $response->assertRedirect(route('admin.products.index'));
        $this->assertDatabaseMissing('products', ['id' => $product->id]);
        Storage::disk('public')->assertMissing('img1.jpg');
        Storage::disk('public')->assertMissing('img2.jpg');
    }

    #[Test]
    public function admin_can_delete_single_image_via_ajax()
    {
        $product = Product::factory()->create([
            'images' => json_encode(['img1.jpg', 'img2.jpg']),
        ]);

        Storage::disk('public')->put('img1.jpg', 'dummy');
        Storage::disk('public')->put('img2.jpg', 'dummy');

        $response = $this->actingAs($this->admin)
            ->post(route('admin.products.deleteImage', $product), [
                'image' => 'img1.jpg'
            ]);

        $response->assertJson(['success' => true]);
        $product->refresh();
        $this->assertCount(1, json_decode($product->images, true));
        Storage::disk('public')->assertMissing('img1.jpg');
        Storage::disk('public')->assertExists('img2.jpg');
    }

    #[Test]
    public function non_admin_cannot_access_product_routes()
    {
        $user = User::factory()->create(['is_admin' => false]);
        $product = Product::factory()->create();

        $this->actingAs($user)
            ->get(route('admin.products.index'))
            ->assertStatus(403);
    }
}
